{
  "name": "mesh-map-server",
  "version": "1.0.0",
  "description": "Self-hosted mesh coverage map server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "psql $DATABASE_URL -f migrations/001_initial_schema.sql",
    "test-data": "node scripts/generate-test-data.js",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detached": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:detached": "docker-compose -f docker-compose.prod.yml up -d --build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ngeohash": "^0.6.3",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
